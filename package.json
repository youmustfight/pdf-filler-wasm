{
  "name": "pdf-filler-wasm",
  "version": "0.1.0",
  "description": "PDF form filling library using Poppler + Cairo compiled to WebAssembly",
  "packageManager": "pnpm@9.15.4",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./wasm": {
      "import": "./dist/pdf-filler.js",
      "require": "./dist/pdf-filler.js"
    }
  },
  "files": [
    "dist/*.js",
    "dist/*.mjs",
    "dist/*.wasm",
    "dist/*.d.ts",
    "dist/*.map",
    "LICENSE",
    "README.md"
  ],
  "scripts": {
    "build": "pnpm build:wasm && pnpm build:ts",
    "build:deps": "docker run --rm -v $(pwd):/src pdf-filler-builder /src/deps/build-deps.sh",
    "build:wasm": "docker run --rm -v $(pwd):/src pdf-filler-builder /src/scripts/build-wasm.sh",
    "build:ts": "node esbuild.config.mjs && tsc --emitDeclarationOnly",
    "build:docker": "docker build -t pdf-filler-builder -f docker/Dockerfile .",
    "clean": "rm -rf dist build deps/build deps/install node_modules",
    "test": "vitest run",
    "test:watch": "vitest",
    "lint": "eslint src test --ext .ts",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm build && pnpm test",
    "example": "cp examples/browser/index.html dist/ && serve dist -p 3000"
  },
  "keywords": [
    "pdf",
    "form",
    "filler",
    "wasm",
    "webassembly",
    "poppler",
    "acroform"
  ],
  "author": "",
  "license": "GPL-3.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/youmustfight/pdf-filler-js.git"
  },
  "bugs": {
    "url": "https://github.com/youmustfight/pdf-filler-js/issues"
  },
  "homepage": "https://github.com/youmustfight/pdf-filler-js#readme",
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "esbuild": "^0.19.8",
    "eslint": "^8.55.0",
    "serve": "14.2.5",
    "typescript": "^5.3.2",
    "vitest": "^1.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
